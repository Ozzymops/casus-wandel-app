<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.ChangePasswordPage">
    
    <ScrollView>
        <StackLayout>
            <StackLayout Margin="10">
                <Label Text="Wachtwoord wijzigen" FontAttributes="Italic" FontSize="20" TextColor="DarkGreen" Margin="10, 10, 0, 0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0">
                <Label Text="Oud wachtwoord" FontSize="12" TextColor="DarkGreen" WidthRequest="100"/>
                <Entry Text="Oud wachwoord" FontSize="12" TextColor="DarkGreen" IsPassword="False"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0">
                <Label Text="nieuw wachtwoord" FontSize="12" TextColor="DarkGreen" WidthRequest="100" />
                <Entry Text="nieuw wachtwoord" FontSize="12" TextColor="DarkGreen" IsPassword="False"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Button x:Name="SaveButton" Text="Opslaan" Clicked="SaveButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
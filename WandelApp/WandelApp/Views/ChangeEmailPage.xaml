<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.ChangeEmailPage">

    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Label Text="E-mail wijzigen" FontAttributes="Italic" FontSize="20" TextColor="DarkGreen" Margin="10, 10, 0, 0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label Text="Oud e-mail adres"/>
                <Entry Text="Oud e-mail adres" Keyboard="Email"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label Text="nieuw e-mail adres"/>
                <Entry Text="nieuw e-mail adres" Keyboard="Email"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
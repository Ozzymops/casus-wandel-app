<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.ChangeEmailPage">

    <ScrollView>
        <StackLayout>
            <StackLayout Margin="10">
                <Label Text="E-mail wijzigen" FontAttributes="Italic" FontSize="20" TextColor="DarkGreen" Margin="10, 10, 0, 0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0">
                <Label Text="Oud e-mail adres" FontSize="12" TextColor="DarkGreen" WidthRequest="100"/>
                <Entry Text="Oud e-mail adres" FontSize="12" TextColor="DarkGreen" Keyboard="Email"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0">
                <Label Text="nieuw e-mail adres" FontSize="12" TextColor="DarkGreen" WidthRequest="100" />
                <Entry Text="nieuw e-mail adres" FontSize="12" TextColor="DarkGreen" Keyboard="Email"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Button x:Name="SaveButton" Text="Opslaan"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
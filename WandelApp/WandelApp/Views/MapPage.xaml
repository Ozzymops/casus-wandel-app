<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.MapPage"
             xmlns:models="clr-namespace:WandelApp.Models"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    <ScrollView>
        <StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Start" Margin="10">
                <Label x:Name="NameOfRoute" Text="Naam wandelroute" TextColor="DarkGreen"/>
                <Label x:Name="EstematedRouteTime" Text="Geschatte looptijd" TextColor="DarkGreen"/>
                <Label x:Name="DifficultyOfRoute" Text="Moeilijkheidsgraad" TextColor="DarkGreen"/>
                <Label x:Name="RouteDistance" Text="Afstand:" TextColor="DarkGreen"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Button Text="Toon meer info"/>
            </StackLayout>

            <StackLayout Margin="180">
                <maps:Map x:Name="GoogleAPIMaps" HeightRequest="200" WidthRequest="200"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Button Text="Legenda"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Label Text="Trivia over Point of Interest:" TextColor="DarkGreen"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.ForgotPasswordPage">
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Label Text="Wachtwoord vergeten" FontAttributes="Italic" FontSize="20" TextColor="DarkGreen" Margin="10, 10, 0, 0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label Text="Gebruikersnaam"/>
                <Entry Text="Gebruikersnaam"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label Text="E-mail adres"/>
                <Entry Text="E-mail adres" Keyboard="Email"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
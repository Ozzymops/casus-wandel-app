<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.ForgotPasswordPage">
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Label Text="Wachtwoord vergeten" FontAttributes="Italic" FontSize="20" TextColor="DarkGreen" Margin="10, 10, 0, 0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0" >
                <Label Text="Gebruikersnaam" FontSize="12" TextColor="DarkGreen" WidthRequest="100" />
                <Entry Text="Gebruikersnaam" FontSize="12" TextColor="DarkGreen"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Margin="10,10,0,0" >
                <Label Text="E-mail adres" FontSize="12" TextColor="DarkGreen" WidthRequest="100"/>
                <Entry Text="E-mail adres" FontSize="12" Keyboard="Email" TextColor="DarkGreen"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Button x:Name="SendEmailButton" Text="Verstuur E-mail"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>